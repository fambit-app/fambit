{
  "manifest_version": 2,
  "name": "Fambit",
  "version": "0.1.0",
  "description": "WebExtension to microdonate to visited websites",

  "browser_action": {
    "default_icon": {
      "16": "icon-16.png",
      "19": "icon-19.png",
      "24": "icon-24.png"
    },
    "default_title": "Fambit",
    "default_popup": "onboard-popup.html"
  },
  
  "icons": {
    "16": "icon-16.png",
    "36": "icon-36.png",
    "48": "icon-48.png"
  },

  "applications": {
    "gecko": {
      "id": "fambit@fuzzlesoft.ca"
    }
  },

  "background": {
    "scripts": ["commons.js", "background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["readRecipient.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "https://*.blockchain.info/*",
    "activeTab",
    "alarms"
  ]
}